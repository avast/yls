{
  "name": "vscode-yls",
  "displayName": "YARA Language Server",
  "description": "A Visual Studio Code extension for YARA based on YLS (Yara Language Server).",
  "author": "Matej Kastak",
  "license": "MIT",
  "version": "1.4.3",
  "repository": {
    "type": "git",
    "url": "https://github.com/avast/yls"
  },
  "publisher": "avast-threatlabs-yara",
  "categories": [
    "Programming Languages",
    "Linters",
    "Snippets",
    "Formatters",
    "Other"
  ],
  "keywords": [
    "yara",
    "yar",
    "lsp",
    "yls"
  ],
  "engines": {
    "vscode": "^1.68.0"
  },
  "activationEvents": [
    "onLanguage:yara"
  ],
  "main": "./out/extension",
  "contributes": {
    "configuration": {
      "type": "object",
      "title": "YARA",
      "properties": {
        "yls.executablePath": {
          "scope": "machine",
          "type": "string",
          "default": "",
          "description": "Specifies an absolute path to the yls executable. If empty yls is expected to be in $PATH variable. (example: /home/user/yls/env/bin/yls)"
        },
        "yls.yari.samplesDirectory": {
          "scope": "machine",
          "type": "string",
          "default": "",
          "description": "Specifies an absolute path to the directory used to store samples and module data. Used only for local YARI. (example: /home/user/samples)"
        }
      }
    },
    "configurationDefaults": {
      "[yara]": {
        "editor.tabSize": 4,
        "editor.insertSpaces": false,
        "editor.detectIndentation": false
      }
    },
    "languages": [
      {
        "id": "yara",
        "extensions": [
          ".yar",
          ".yara"
        ],
        "aliases": [
          "yara",
          "Yara",
          "YARA",
          "YAR",
          "Yar",
          "yar"
        ],
        "configuration": "./language/config.json"
      }
    ],
    "grammars": [
      {
        "language": "yara",
        "scopeName": "source.yara",
        "path": "./language/yara.tmLanguage.json"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "yarn run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "yarn run compile && yarn run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^8.0.1",
    "@types/mocha": "^10.0.9",
    "@types/node": "22.x",
    "@types/vscode": "^1.97.0",
    "@typescript-eslint/eslint-plugin": "^8.24.0",
    "@typescript-eslint/parser": "^8.24.0",
    "@vscode/test-electron": "^2.4.1",
    "eslint": "^9.20.1",
    "glob": "^11.0.1",
    "mocha": "^11.1.0",
    "ovsx": "^0.10.1",
    "typescript": "^5.7.3",
    "vsce": "^2.15.0"
  },
  "dependencies": {
    "vscode-languageclient": "^7.0.0"
  }
}
